@model HiveFive.Core.Common.AccountSettings.AccountSettingsModel
@{
	ViewBag.Title = AccountSettings.SettingsPageTitle;
}

<div class="d-flex justify-content-center pt-3 pt-md-5">
	<div class="bg-secondary form-container">
		<h2>@ViewBag.Title</h2>
		<section>
			<h4>@Account.SettingsTitle</h4>
			<hr />

			<small>@AccountSettings.SettingsTwoFactorTitle</small>
			<div class="form-group">
				@Html.EnumDropDownListFor(m => m.TwoFactorType, new { @class = "form-control form-control-sm", @readonly = "readonly", disabled = "disabled", style = "cursor:default;" })
			</div>
			<div class="form-group">
				<a class="btn btn-block btn-primary" href="@Url.Action("Create", "TwoFactor")">@AccountSettings.TwoFactorButtonTextSetup</a>
			</div>
		</section>
	</div>
</div>

