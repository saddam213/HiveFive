<script id="messageTemplate" type="text/html">
	<li class="list-group-item message-item message-sender-{{Sender}} message-id-{{Id}}" data-messageid="{{Id}}" data-filter="{{Hives}}">
		<div class="d-flex flex-column">
			<div class="d-flex justify-content-between">
				<span class="action-userhandle message-userhandle" data-user="{{Sender}}">@@{{Sender}}</span>
				<div class="d-flex">
					<small class="time-elapsed" data-time="{{Timestamp}}">{{TimeElapsed}}</small>
					<div class="btn-group">
						<span data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-grip-right">
							<i class="fas fa-ellipsis-v"></i>
						</span>
