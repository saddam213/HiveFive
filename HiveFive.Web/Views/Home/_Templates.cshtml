							<button data-user="{{Sender}}" class="dropdown-item message-muteuser" type="button">Mute User</button>
							<button class="dropdown-item message-mute" type="button">Mute Message</button>
						</div>
					</div>
				</div>
			</div>
			<p class="message-text">{{Message}}</p>
			<div class="d-flex flex-wrap">
				{{#Hives}}
				<span class="message-hivetag">#{{.}}</span>
				{{/Hives}}
			</div>
			<div>
				{{{EmbeddedTags}}}
			</div>
		</div>
	</li>
</script>

