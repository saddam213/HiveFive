@{
	ViewBag.Title = "HiveFive";
}

<div id="main-container" class="main-container-mobile row">
	<ul class="nav nav-tabs w-100" id="myTab" role="tablist">
		<li class="nav-item flex-fill">
			<a class="nav-link text-center active" id="section-thehive" data-toggle="tab" href="#section-content-hive" role="tab">
				<i class="fa fa-hand-paper"></i>
			</a>
		</li>
		<li class="nav-item  flex-fill">
			<a class="nav-link text-center" id="section-header-myhive" data-toggle="tab" href="#section-content-myhive" role="tab">
				<i class="fa fa-bookmark"></i>
			</a>
		</li>
		<li class="nav-item  flex-fill">
			<a class="nav-link text-center" id="section-header-friends" data-toggle="tab" href="#section-content-friends" role="tab">
				<i class="fa fa-user"></i>
			</a>
		</li>
		<li class="nav-item  flex-fill">
			<a class="nav-link text-center" id="section-header-trending" data-toggle="tab" href="#section-content-trending" role="tab">
				<i class="fa fa-heart"></i>
			</a>
		</li>
		<li class="nav-item  flex-fill">
			<a class="nav-link text-center" id="section-header-settings" data-toggle="tab" href="#section-content-settings" role="tab">
				<i class="fa fa-cog"></i>
			</a>
		</li>
	</ul>
	<div class="tab-content w-100">
		<div class="tab-pane fade show active" id="section-content-hive" role="tabpanel">
			@{ Html.RenderPartial("_MainFeed");}
		</div>
		<div class="tab-pane fade" id="section-content-myhive" role="tabpanel">
			@{ Html.RenderPartial("_MyHives");}
		</div>
		<div class="tab-pane fade" id="section-content-friends" role="tabpanel">
			@{ Html.RenderPartial("_Following");}
			@{ Html.RenderPartial("_Followers");}
		</div>
		<div class="tab-pane fade" id="section-content-trending" role="tabpanel">
			@{ Html.RenderPartial("_Trending");}
		</div>
		<div class="tab-pane fade" id="section-content-settings" role="tabpanel">
			@{ Html.RenderPartial("_Settings");}
		</div>
	</div>
</div>

@{ Html.RenderPartial("_Templates");}

@section Scripts {
	<script src="~/Content/Scripts/Project/Home/index.js?v=@DateTime.UtcNow.Millisecond"></script>
}

