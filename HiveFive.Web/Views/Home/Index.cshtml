@{
	ViewBag.Title = "Home Page";
}

<div class="jumbotron">
	<h1>ASP.NET</h1>
	<p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
	<p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
	<div>
	<span>Websocket: <b id="socket">Disconnected</b></span>
	</div>
</div>

@section Scripts {
	<script>
		(async ($) => {
			const hiveHub = $.connection.hiveHub;
			hiveHub.client.OnConnect = function () {
				$("#socket").text("Connected").addClass("text-success");
			};
			await $.connection.hub.start({ transport: ['webSockets'] });
		})(jQuery);
	</script>
}

